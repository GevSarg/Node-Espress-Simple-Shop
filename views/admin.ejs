<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/admin.css" />
  </head>
  <body>
    <%- include('partials/header.ejs') %>
    <div class="container">
      <h1>Admin Dashboard - Products Management</h1>
      <div class="add-product">
        <a href="/add-product" class="add-product-btn">Add New Product</a>
      </div>
      <div class="products-container">
        <% products.forEach(function(product) { %>
        <div class="product-card">
          <div class="img">
            <img src="<%= product.image %>" alt="<%= product.name %>" />
          </div>
          <div class="info">
            <p><strong>Name:</strong> <%= product.name %></p>
            <p><strong>Brand:</strong> <%= product.brand %></p>
            <p><strong>Price:</strong><i>$<%= product.price %></i></p>
          </div>
          <div class="admin-actions">
            <button class="delete-product" id="<%= product.id %>">
              Delete
            </button>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
    <script src="javascripts/manageProducts.js"></script>
  </body>
</html>
